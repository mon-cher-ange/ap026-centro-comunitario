<Window x:Class="UI.Views.CourseManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CourseManagementView"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Course Management"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   Grid.ColumnSpan="2">
        </TextBlock>
        <GroupBox Header="Available Courses"
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="5">
            <DataGrid Name="CourseDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionChanged="CourseDataGrid_SelectionChanged"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Name="CourseGroupBox"
                  Header="New Course"
                  Grid.Row="1"
                  Grid.Column="2"
                  Margin="5">
            <StackPanel>
                <Label Content="Name:"></Label>
                <TextBox Name="CourseNameTextBox"></TextBox>
                <Label Content="Description:"></Label>
                <TextBox Name="CourseDescriptionTextBox"
                         Height="50"
                         AcceptsReturn="True"
                         TextWrapping="Wrap">
                </TextBox>
                <Label Content="Quota:"></Label>
                <TextBox Name="CourseQuotaTextBox"></TextBox>
                <Label Content="Start date:"></Label>
                <DatePicker Name="CourseStartDatePicker"></DatePicker>
                <Label Content="End date:"></Label>
                <DatePicker Name="CourseEndDatePicker"></DatePicker>
                <Label Content="State:"></Label>
                <ComboBox Name="CourseStateComboBox"></ComboBox>
                <Label Content="Teacher:"></Label>
                <ComboBox Name="CourseTeacherComboBox"></ComboBox>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">
            <Button Name="AddButton" Content="Add" Click="AddButton_Click"></Button>
            <Button Name="UpdateButton" Content="Update" Click="UpdateButton_Click"></Button>
            <Button Name="DeleteButton" Content="Delete" Click="DeleteButton_Click"></Button>
            <Button Name="ClearButton" Content="Clear" Click="ClearButton_Click"></Button>
            <Button Name="CloseButton" Content="Close" Click="CloseButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
