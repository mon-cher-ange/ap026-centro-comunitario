<Window x:Class="UI.Views.TeacherManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TeacherManagementView"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Teacher Management"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   Grid.ColumnSpan="2">
        </TextBlock>
        <GroupBox Header="Available Teachers"
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="5">
            <DataGrid Name="TeacherDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionChanged="TeacherDataGrid_SelectionChanged"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Dni" Binding="{Binding DNI}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Name="TeacherGroupBox"
                  Header="New Teacher"
                  Grid.Row="1"
                  Grid.Column="2"
                  Margin="5">
            <StackPanel>
                <Label Content="DNI:"></Label>
                <TextBox Name="TeacherDNITextBox"></TextBox>
                <Label Content="Name:"></Label>
                <TextBox Name="TeacherNameTextBox"></TextBox>
                <Label Content="Last Name:"></Label>
                <TextBox Name="TeacherLastNameTextBox"></TextBox>
                <Label Content="Email:"></Label>
                <TextBox Name="TeacherEmailTextBox"></TextBox>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">
            <Button Name="AddButton" Content="Add" Click="AddButton_Click"></Button>
            <Button Name="UpdateButton" Content="Update" Click="UpdateButton_Click"></Button>
            <Button Name="DeleteButton" Content="Delete" Click="DeleteButton_Click"></Button>
            <Button Name="ClearButton" Content="Clear" Click="ClearButton_Click"></Button>
            <Button Name="CloseButton" Content="Close" Click="CloseButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
