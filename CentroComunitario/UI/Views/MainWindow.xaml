<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="768"
        Width="1024"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Height" Value="30"></Setter>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Height" Value="30"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="System">
                <MenuItem Header="Users"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit" Click="ExitSystemMenuItem"></MenuItem>
            </MenuItem>
            <MenuItem Header="Academics">
                <MenuItem Header="Courses" Click="CoursesMenuItem_Click"></MenuItem>
                <MenuItem Header="Teachers" Click="TeachersMenuItem_Click"></MenuItem>
                <MenuItem Header="Students" Click="StudentsMenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Enrollments"></MenuItem>
            <MenuItem Header="Reports" ></MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <StatusBarItem Content="Ready"></StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
