<Window x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ventana Principal del Sistema"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Height" Value="30"></Setter>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Height" Value="30"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="Sistema">
                <MenuItem Header="Usuario" Click="UserMenuItem_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Salir" Click="ExitSystemMenuItem"></MenuItem>
            </MenuItem>
            <MenuItem Header="Académico">
                <MenuItem Header="Curso" Click="CourseMenuItem_Click"></MenuItem>
                <MenuItem Header="Docente" Click="TeacherMenuItem_Click"></MenuItem>
                <MenuItem Header="Estudiante" Click="StudentMenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Inscripciones"></MenuItem>
            <MenuItem Header="Reportes" ></MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <StatusBarItem Content="Conectado"></StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
