<Window x:Class="Vistas.Views.StudentManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ventana de Gestión Estudiante"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Gestión Estudiante"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   Grid.ColumnSpan="2">
        </TextBlock>
        <GroupBox Header="Estudiantes disponibles"
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="5">
            <DataGrid Name="StudentDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionChanged="StudentDataGrid_SelectionChanged"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="DNI" Binding="{Binding DNI}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding LastName}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Name="StudentGroupBox"
                  Header="Nuevo Estudiante"
                  Grid.Row="1"
                  Grid.Column="2"
                  Margin="4">
            <StackPanel Margin="4">
                <Label Content="DNI"></Label>
                <TextBox Name="StudentDNITextBox"></TextBox>
                <Label Content="Nombre"></Label>
                <TextBox Name="StudentNameTextBox"></TextBox>
                <Label Content="Apellido"></Label>
                <TextBox Name="StudentLastNameTextBox"></TextBox>
                <Label Content="Correo electrónico"></Label>
                <TextBox Name="StudentEmailTextBox"></TextBox>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">
            <Button Name="AddButton"
                    Content="Agregar"
                    Click="AddButton_Click"
                    Style="{StaticResource ResourceKey=StudentButtonTemplates}">
            </Button>
            <Button Name="UpdateButton"
                    Content="Actualizar"
                    Click="UpdateButton_Click"
                    Style="{StaticResource ResourceKey=StudentButtonTemplates}">
            </Button>
            <Button Name="DeleteButton"
                    Content="Eliminar"
                    Click="DeleteButton_Click"
                    Style="{StaticResource ResourceKey=StudentButtonTemplates}">
            </Button>
            <Button Name="ClearButton"
                    Content="Limpiar"
                    Click="ClearButton_Click"
                    Style="{StaticResource ResourceKey=StudentButtonTemplates}">
            </Button>
            <Button Name="CloseButton"
                    Content="Salir"
                    Click="CloseButton_Click"
                    Style="{StaticResource ResourceKey=StudentButtonTemplates}">
            </Button>
        </StackPanel>
    </Grid>
</Window>
